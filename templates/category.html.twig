{% if inline %}
    {% if category.image %}
        <img src="data:image/png;base64,{{ category.image }}"
             style="max-width: 18px; max-height: 18px;"/>
    {% endif %}
    {{ category.name }}
{% else %}
    <div class="text-center">
        <div>
            {% if category.image %}
                <img src="data:image/png;base64,{{ category.image }}"
                     style="max-width: 32px; max-height: 32px;"/>
            {% endif %}
        </div>
        <div>
            {{ category.name }}
        </div>
    </div>
{% endif %}
